@model StudentSystem.WebApp.ViewModels.CourseManagementViewModel
@{
    ViewData["Title"] = "Courses Overview";
}
<h3 id="PageTitle">Course Management - overview</h3>

<table class="table">
    <thead>
        <tr>
            <th>Course Code</th>
            <th>Course Name</th>
            <th>Department</th>
            <th>Credits</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr class="clickable"
                onclick="location.href = '@(Url.Action("Details", "CourseManagement", new { courseCode = course.CourseCode }))'">
                <td>@course.CourseCode</td>
                <td>@course.CourseName</td>
                <td>@course.Department</td>
                <td>@course.CreditHours</td>
            </tr>
        }
    </tbody>
</table>
<a id="RegisterCourseButton" asp-action="New" asp-controller="CourseManagement" class="btn btn-default">Register
    course</a>
